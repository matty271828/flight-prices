[Unit]
Description=Flight Prices
After=network.target

[Service]
User=root  # The user under which your app will run. Change if needed.
WorkingDirectory=/root/flight-prices  # Directory where your app exists
ExecStart=/root/flight-prices/flight-prices  # Path to your application binary
Restart=always  # This will ensure the app restarts if it crashes
Environment="AMADEUS_API_KEY=$AMADEUS_API_KEY" "AMADEUS_API_SECRET=$AMADEUS_API_SECRET"  

[Install]
WantedBy=multi-user.target